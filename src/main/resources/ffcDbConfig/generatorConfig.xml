<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="ffcDbConfig/generatorConfig.properties"/>
    <!-- 配置mysql 驱动jar包路径.用了绝对路径 -->
    <classPathEntry location="${MYSQL.JAR.LOCATION}"/>

    <context id="ffc_contex" targetRuntime="MyBatis3" defaultModelType="flat">

        <!--设置属性触发ftl模板文件夹-->
        <property name="fieldTemplatePackage" value="${fieldTemplatePackage}"/>
        <!--设置表触发ftl模板文件夹-->
        <property name="tableTemplatePackage" value="${tableTemplatePackage}"/>


        <plugin type="com.my.ffc.plugin.FfcPlugin"/>

        <!-- 数据库连接 -->
        <jdbcConnection driverClass="${jdbc.driverClass}" connectionURL="${jdbc.connectionURL}" userId="${jdbc.userId}"
                        password="${jdbc.password}">
            <!-- 针对oracle数据库 -->
            <property name="remarksReporting" value="true"/>
            <!-- 针对mysql数据库 -->
            <property name="useInformationSchema" value="true"/>
        </jdbcConnection>

        <!--↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓这些内容不用修改，无需关注，对代码生成无影响，是原来mybatis-generator的配置↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓-->
        <javaModelGenerator targetPackage="com.xxx" targetProject="/"/>
        <sqlMapGenerator targetPackage="xxx" targetProject="xxx"/>
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.xxx" targetProject="/"/>
        <!--↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑这些内容不用修改，无需关注，对代码生成无影响，是原来mybatis-generator的配置↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑-->


        <!-- 数据表进行生成操作 schema:相当于库名; tableName:表名; domainObjectName:对应的DO -->
        <table tableName="scores">
            <!--以下属性可以传递到模板文件中-->
            <property name="aaaa" value="bbbbbbbbbbbbbbbbbbbbbbbb"/>
            <property name="cccc" value="ddd"/>
        </table>
        <table tableName="zzz"></table>


    </context>
</generatorConfiguration>